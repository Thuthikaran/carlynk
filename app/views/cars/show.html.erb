<div class="background-color">

    <div class="car-image">
        <div class="car-brand">
            <%= image_tag @car.image_urls, alt: "#{@car.brand} #{@car.model}" , class: 'car-image-img' %>
           <span class="car-name"><%= @car.brand %></span>
    <span class="car-name"><%= @car.model %></span>
    <span class="car-name"><%= @car.year_of_production %></span>
        </div>
    </div>


        <div class="car-info-container">
            <div class="car-details">
                <p><strong>Address:</strong>
                    <%= @car.address %>
                </p>
                <p><strong>Price per Day:</strong> €<%= @car.price_per_day %>
                </p>
                <p><strong>Color:</strong>
                    <%= @car.color %>
                </p>
                <p><strong>Transmission:</strong>
                    <%= @car.transmission %>
                </p>
                <p><strong>Mileage:</strong>
                    <%= @car.mileage %> km
                </p>
                <p><strong>Seats:</strong>
                    <%= @car.seats %>
                </p>
                <p><strong>Fuel Type:</strong>
                    <%= @car.fuel_type %>
                </p>
            </div>
        
        
            <div class="form">
                <h3 class="text-center">Book this car</h3>
                <%= simple_form_for [@car, @reservation], method: :post, data: { controller: 'datepicker', datepicker_price_per_day_value: @car.price_per_day } do |f| %>
                    <%= f.input :start_date, as: :string, input_html: { data: { datepicker_target: "startTime" } } %>
                    <%= f.input :end_date, as: :string, input_html: { data: { datepicker_target: "endTime" } } %>
                    <div class="text-center" data-datepicker-target="daysBetween">For: </div>
                    <div class="text-center" data-datepicker-target="totalPrice">Total Price: €0.00</div>
                    <%= f.button :submit, class: "btn btn-primary btn-color" %>
                <% end %>       
            </div>
        </div>
        
        <%= link_to 'see more cars' , cars_path, class: 'back-to-list' %>
</div>







