<h1 class="index-title">Find Your Perfect Car</h1>

<div class="index-container">
    <div class="row justify-content-center">
        <% @cars.each do |car| %>
            <div class="col-md-4 mb-4">
                <%= link_to car_path(car), class: 'card car-card text-decoration-none text-dark' do %>
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= car.brand %>
                                <%= car.model %>
                                    <%= car.year_of_production %>
                        </h5>
                        <p class="card-text">
                            <strong>Price per Day:</strong> â‚¬<%= car.price_per_day %><br>
                                <strong>Address:</strong>
                                <%= car.address %>
                        </p>
                    </div>
                    <% end %>
            </div>
            <% end %>
    </div>
</div>